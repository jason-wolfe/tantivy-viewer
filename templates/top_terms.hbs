{{#*inline "contents"}}
    <h1>Top Terms in {{field}}</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
        <tr>
            <th>Term</th>
            <th>Count</th>
        </tr>
        </thead>
        <tbody>
        {{#each terms}}
            <tr>
                <td>{{this.term}}</td>
                <td><a href="term_docs?field={{../field}}&term={{this.term}}">{{this.count}}</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/inline}}
