{{#*inline "contents"}}
    <h1>Documents matching query <code>{{query}}</code></h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
        <tr>
            <th>Doc</th>
        </tr>
        </thead>

        <tbody>
        {{#each docs}}
            {{#each this.[1]}}
                <tr>
                    <td>
                        <a href="reconstruct?segment={{../this.[0]}}&doc={{this}}">({{../this.[0]}}, {{this}})</a>
                    </td>
                </tr>
            {{/each}}
        {{/each}}
        {{#if truncated}}
            <tr><td>[...Truncated...]</td></tr>
        {{/if}}
        </tbody>
    </table>
{{/inline}}
{{~> skeleton~}}
